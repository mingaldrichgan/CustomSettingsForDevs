<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground">

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/toolbar_default" />


        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_actionbar"
            android:clickable="true"
            android:focusable="true" />

        <RelativeLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay"
            android:elevation="5dp"
            android:onClick="onClick"
            android:visibility="gone" >

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/action_reboot_systemUI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:onClick="onClick"
                android:text="@string/fab_reboot_systemUI"
                android:textColor="?attr/colorOnSecondary"
                app:shapeAppearance="@style/FabShape"
                app:backgroundTint="?attr/colorPrimary"
                app:rippleColor="?attr/colorAccent"
                app:icon="@drawable/ic_reboot_ui"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="27dp"
                app:strokeColor="?attr/colorAccent"
                app:strokeWidth="2.5dp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/action_reboot_bl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/action_reboot_systemUI"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:onClick="onClick"
                android:text="@string/fab_reboot_bl"
                android:textColor="?attr/colorOnSecondary"
                app:shapeAppearance="@style/FabShape"
                app:backgroundTint="?attr/colorAccent"
                app:rippleColor="?attr/colorPrimary"
                app:icon="@drawable/ic_reboot_bl"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="27dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2.5dp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/action_reboot_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/action_reboot_bl"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:onClick="onClick"
                android:text="@string/fab_reboot_recovery"
                android:textColor="?attr/colorOnSecondary"
                app:shapeAppearance="@style/FabShape"
                app:backgroundTint="?attr/colorPrimary"
                app:rippleColor="?attr/colorAccent"
                app:icon="@drawable/ic_reboot_recovery"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="27dp"
                app:strokeColor="?attr/colorAccent"
                app:strokeWidth="2.5dp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/action_reboot_hotboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/action_reboot_recovery"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:onClick="onClick"
                android:text="@string/fab_reboot_hotboot"
                android:textColor="?attr/colorOnSecondary"
                app:shapeAppearance="@style/FabShape"
                app:backgroundTint="?attr/colorAccent"
                app:rippleColor="?attr/colorPrimary"
                app:icon="@drawable/ic_hotboot"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="27dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2.5dp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/action_reboot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/action_reboot_hotboot"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="6dp"
                android:onClick="onClick"
                android:text="@string/fab_reboot"
                android:textColor="?attr/colorOnSecondary"
                app:shapeAppearance="@style/FabShape"
                app:backgroundTint="?attr/colorPrimary"
                app:rippleColor="?attr/colorAccent"
                app:icon="@drawable/ic_reboot"
                app:iconTint="?attr/colorOnSecondary"
                app:iconSize="27dp"
                app:strokeColor="?attr/colorAccent"
                app:strokeWidth="2.5dp" />
        </RelativeLayout>
    </RelativeLayout>
    <!-- android:layout_marginTop="?android:attr/actionBarSize"-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:insetForeground="@null">

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="com.typhus.romcontrol.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            app:layout="@layout/fragment_navigation_drawer"/>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>