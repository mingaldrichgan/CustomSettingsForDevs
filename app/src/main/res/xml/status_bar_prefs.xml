<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/dtts_category_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="double_tap_sleep_gesture"
            android:summaryOff="@string/double_tap_to_sleep_summary"
            android:summaryOn="@string/double_tap_to_sleep_summary"
            android:title="@string/double_tap_to_sleep_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/statusbar_icons_title" />
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/status_bar_battery_style_entries"
            android:entryValues="@array/status_bar_battery_style_values"
            android:key="status_bar_battery_style"
            android:title="@string/status_bar_battery_style_title" />
        <PreferenceScreen android:title="@string/battery_percentage_title">
            <PreferenceCategory android:title="@string/battery_percentage_title">
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/battery_percent_entries"
                    android:entryValues="@array/battery_percent_values"
                    android:key="status_bar_show_battery_percent_vm"
                    android:title="@string/battery_percent_title" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="do_left_battery_text"
                    android:summaryOff="@string/left_battery_text_summary"
                    android:summaryOn="@string/left_battery_text_summary"
                    android:title="@string/left_battery_text_title" />
            </PreferenceCategory>
        </PreferenceScreen>
        <SwitchPreference
            android:defaultValue="false"
            android:key="dual_tone_battery"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/dual_tone_battery_on_summary"
            android:title="@string/dual_tone_battery_title" />
        <PreferenceScreen
            android:title="@string/battery_bar_title">
            <PreferenceCategory android:title="@string/battery_bar_title">
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/battery_bar_no_navbar_entries"
                    android:entryValues="@array/battery_bar_no_navbar_values"
                    android:key="statusbar_battery_bar_no_navbar_list"
                    android:title="@string/battery_bar_no_navbar" />
                <!--#ffffffff-->
                <!-- -16711936 -->
                <com.typhus.romcontrol.prefs.ColorPickerPreference
                    alphaSlider="false"
                    hexValue="true"
                    android:defaultValue="0xffffffff"
                    android:key="statusbar_battery_bar_color"
                    android:title="@string/battery_bar_color" />
                <!--#ffff6600-->
                <!-- -39424 -->
                <com.typhus.romcontrol.prefs.ColorPickerPreference
                    alphaSlider="false"
                    hexValue="true"
                    android:defaultValue="0xffff6600"
                    android:key="statusbar_battery_bar_battery_low_color"
                    android:title="@string/battery_bar_battery_low_color" />
                <SwitchPreference
                    android:defaultValue="true"
                    android:key="statusbar_battery_bar_enable_charging_color"
                    android:title="@string/battery_bar_use_charging_color" />
                <!--#ff00ff00-->
                <!-- -16711936 -->
                <com.typhus.romcontrol.prefs.ColorPickerPreference
                    alphaSlider="false"
                    hexValue="true"
                    android:defaultValue="0xff00ff00"
                    android:key="statusbar_battery_bar_charging_color"
                    android:title="@string/battery_bar_charging_color"
                    android:dependency="statusbar_battery_bar_enable_charging_color" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="statusbar_battery_bar_blend_color"
                    android:summaryOff="@string/battery_bar_blend_color_summary"
                    android:summaryOn="@string/battery_bar_blend_color_summary"
                    android:title="@string/battery_bar_blend_color_title" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="statusbar_battery_bar_blend_color_reverse"
                    android:summaryOff="@string/battery_bar_blend_color_reverse_summary_off"
                    android:summaryOn="@string/battery_bar_blend_color_reverse_summary_on"
                    android:title="@string/battery_bar_blend_color_reverse_title"
                    android:dependency="statusbar_battery_bar_blend_color" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/battery_bar_style_entries"
                    android:entryValues="@array/battery_bar_style_values"
                    android:key="statusbar_battery_bar_style"
                    android:title="@string/battery_bar_style_title" />
                <com.typhus.romcontrol.prefs.SeekBarPreference
                    min="1"
                    units="dp"
                    android:defaultValue="1"
                    android:icon="@null"
                    android:key="statusbar_battery_bar_thickness"
                    android:max="4"
                    android:title="@string/battery_bar_thickness_title" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="statusbar_battery_bar_animate"
                    android:title="@string/battery_bar_animate_title" />
                <!--
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="battery_bar_use_gradient_color"
                    android:summaryOff="@string/sb_battery_bar_gradient_color_summary"
                    android:summaryOn="@string/sb_battery_bar_gradient_color_summary"
