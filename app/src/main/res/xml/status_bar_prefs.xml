                    alphaSlider="false"
                    hexValue="true"
                    android:defaultValue="0xff99cc00"
                    android:key="battery_bar_high_color"
                    android:title="@string/sb_battery_bar_high_color"
                    android:dependency="battery_bar_use_gradient_color"/>
                 -->
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
            android:title="@string/signal_icons">
            <PreferenceCategory android:title="@string/signal_icons">
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="combine_signal_icons"
                    android:summaryOff="@string/lockscreen_charging_animation_off"
                    android:summaryOn="@string/switch_bar_on"
                    android:title="@string/combine_signal_icons_title" />
                <SwitchPreference
                    android:defaultValue="true"
                    android:key="show_fourg_icon"
                    android:summaryOff="@string/show_lte_fourgee_summary"
                    android:summaryOn="@string/show_lte_fourgee_summary"
                    android:title="@string/show_lte_fourgee_title" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
            android:title="@string/status_bar_clock_title">
            <PreferenceCategory android:title="@string/status_bar_clock_title">
                <SwitchPreference
                    android:defaultValue="true"
                    android:key="statusbar_clock"
                    android:title="@string/status_bar_clock_show" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/status_bar_clock_style_entries"
                    android:entryValues="@array/status_bar_clock_style_values"
                    android:key="statusbar_clock_style"
                    android:title="@string/status_bar_clock_style_title"
                    android:dependency="statusbar_clock" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="center_clock_fix"
                    android:title="@string/fix_center_clock_padding"
                    android:dependency="statusbar_clock" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="center_clock_rfix"
                    android:title="@string/fix_center_clock_padding_right"
                    android:dependency="statusbar_clock" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/status_bar_am_pm_entries"
                    android:entryValues="@array/status_bar_am_pm_values"
                    android:key="statusbar_am_pm"
                    android:title="@string/status_bar_am_pm_title"
                    android:dependency="statusbar_clock" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="statusbar_clock_seconds"
                    android:title="@string/clock_seconds_display"
                    android:dependency="statusbar_clock" />
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/status_bar_date_title">
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_display_entries"
                    android:entryValues="@array/clock_date_display_values"
                    android:key="clock_date_display"
                    android:title="@string/clock_date_display"
                    android:dependency="statusbar_clock" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_style_entries"
                    android:entryValues="@array/clock_date_style_values"
                    android:key="clock_date_style"
                    android:title="@string/clock_date_style"
                    android:dependency="clock_date_display" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_format_entries_values"
                    android:entryValues="@array/clock_date_format_entries_values"
                    android:key="statusbar_clock_date_format"
                    android:title="@string/clock_date_format"
                    android:dependency="clock_date_display" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/clock_date_position_entries"
                    android:entryValues="@array/clock_date_position_values"
                    android:key="statusbar_clock_date_position"
                    android:title="@string/clock_date_position"
                    android:dependency="clock_date_display" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
        android:title="@string/traffic_category">
        <PreferenceCategory android:title="@string/traffic_category">
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/network_traffic_location_entries"
                android:entryValues="@array/network_traffic_location_values"
                android:key="network_traffic_location"
                android:title="@string/network_traffic_state_title" />
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/show_network_traffic_type_entries"
                android:entryValues="@array/show_network_traffic_type_values"
                android:key="network_traffic_type"
                android:title="@string/network_traffic_type" />
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="0"
                units="KiB/s"
                android:defaultValue="1"
                android:icon="@null"
                android:key="network_traffic_autohide_threshold"
                android:max="10"
                android:title="@string/network_traffic_autohide_threshold_title"
                />
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="1"
                units="sec"
                android:defaultValue="2"
                android:icon="@null"
                android:key="network_traffic_refresh_interval"
                android:title="@string/network_traffic_refresh_interval_title"
                android:max="10"
                />
            <com.typhus.romcontrol.prefs.SeekBarPreference
                min="26"
                units="dp"
                android:defaultValue="36"
                android:icon="@null"
                android:key="network_traffic_font_size"
                android:title="@string/nettraf_font_size"
                android:max="46"
                />
            <SwitchPreference
                android:defaultValue="true"
                android:key="network_traffic_arrow"
                android:summaryOff="@string/network_traffic_hidearrow_summary"
                android:summaryOn="@string/network_traffic_hidearrow_summary"
                android:title="@string/network_traffic_hidearrow" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen android:title="@string/more_line_text">
            <PreferenceCategory android:title="@string/lockscreen_show_status_bar_title">
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="show_unread_messages_number"
                    android:summaryOff="@string/lockscreen_charging_animation_off"
                    android:summaryOn="@string/switch_bar_on"
                    android:title="@string/unread_messages_title" />
                <com.typhus.romcontrol.prefs.MyListPreference
                    android:defaultValue="0"
                    android:entries="@array/status_bar_height_entries"
                    android:entryValues="@array/status_bar_height_values"
                    android:key="status_bar_height"
                    android:title="@string/status_bar_height" />
                <SwitchPreference
                    android:defaultValue="false"
                    android:key="fix_sb_left_paddding"
                    android:summaryOff="@string/lockscreen_charging_animation_off"
                    android:summaryOn="@string/switch_bar_on"
                    android:title="@string/fix_status_bar_padding" />
            </PreferenceCategory>
        </PreferenceScreen>
</PreferenceScreen>