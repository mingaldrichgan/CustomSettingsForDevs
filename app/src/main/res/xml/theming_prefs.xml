<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/theme_customization_font_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="gsans_override"
            android:summaryOff="@string/lockscreen_charging_animation_off"
            android:summaryOn="@string/switch_bar_on"
            android:title="@string/gsans_override_title" />
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/fonts_entries"
            android:entryValues="@array/fonts_values"
            android:key="font_style"
            android:title="@string/theme_customization_font_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/icons_style_title">
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/icons_style_entries"
            android:entryValues="@array/icons_style_values"
            android:key="icons_style"
            android:title="@string/icons_style_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/icon_shapes_title">
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/icon_shapes_entries"
            android:entryValues="@array/icon_shapes_values"
            android:key="icon_shapes"
            android:title="@string/icon_shapes_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/signal_icons_theme_title">
        <com.typhus.romcontrol.prefs.MyListPreference
            android:defaultValue="0"
            android:entries="@array/signal_icons_theme_entries"
            android:entryValues="@array/signal_icons_theme_values"
            android:key="signal_icons_theme"
            android:title="@string/signal_icons_theme_title" />
    </PreferenceCategory>
    <PreferenceScreen android:title="@string/more_line_text" >
        <PreferenceCategory android:title="@string/dt_styles">
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/dt_style_entries"
                android:entryValues="@array/dt_style_values"
                android:key="dt_style"
                android:title="@string/dt_styles" />
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/quick_settings_tiles_themes_title">
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/quick_settings_tiles_themes_entries"
                android:entryValues="@array/quick_settings_tiles_themes_values"
                android:key="quick_settings_tiles_themes"
                android:title="@string/quick_settings_tiles_themes_title" />
            <com.typhus.romcontrol.prefs.MyListPreference
                android:defaultValue="0"
                android:entries="@array/qs_rows_entries"
                android:entryValues="@array/qs_rows_values"
                android:key="qs_rows_number"
                android:title="@string/qs_rows_title" />
            <SwitchPreference
                android:defaultValue="false"
                android:key="qs_tiles_3_columns"
                android:summaryOff="@string/lockscreen_charging_animation_off"
                android:summaryOn="@string/switch_bar_on"
                android:title="@string/qs_tiles_3_columns_title" />
        </PreferenceCategory>
        <PreferenceCategory android:title="@string/qs_text_size_title">
            <SwitchPreference
                android:defaultValue="false"
                android:key="qs_small_text_size"
                android:summaryOff="@string/lockscreen_charging_animation_off"
                android:summaryOn="@string/switch_bar_on"
                android:title="@string/qs_text_size" />
        </PreferenceCategory>
    </PreferenceScreen>
</PreferenceScreen>